<div id="post<%= comment.post_id %>ModalComment<%= comment.id %>">

	<div class="d-flex justify-content-between">
		<div class="d-flex">
		<%= image_tag comment.user.profile_pic.attached? ? comment.user.profile_pic : 'flanatar.png', class: "img-thumbnail rounded W-25", style: "max-width: 2.5rem; max-height: 2.5rem; " %>
		<div class="d-flex flex-column mx-2 justify-content-center">
		 <small class ="card-text m-0">  <span class="fw-bold" style="overflow: hidden; white-space: nowrap;text-overflow: ellipsis; max-width:10rem;">
		 <%= link_to comment.user, class: "a-decoration-none", data: {turbo: 'false'} do %>
		  <%= comment.user.username %>
		  <% end %>
		  </span>
	 	</small>
	 	<small> <%= comment.body %> </small>
	 	<small class="text-secondary"> <%= time_ago_in_words(comment.created_at) %> </small>


		</div>
		</div>
	<% if comment.user == current_user %>
	<%= button_to comment_path(id: comment.id), method: :delete, style: "background:none; border:none" do %>
	 <i class="fa fa-times"> </i>
	 <% end %>
	 <% end %>
	</div>
</div>